{
  "name": "elastic-ai-agent",
  "version": "1.0.0",
  "description": "AI agent that queries Elastic database using OpenAI chat completions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "setup-db": "ts-node src/setup-database.ts",
    "setup-db-with-sample": "ts-node src/setup-database.ts --sample-data",
    "example": "ts-node src/example-usage.ts",
    "upload-codebase": "ts-node src/upload-codebase.ts",
    "search-examples": "ts-node src/codebase-search-example.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "ai",
    "elastic",
    "openai",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.3",
    "@elastic/elasticsearch": "^8.11.0",
    "ai": "^5.0.4",
    "openai": "^4.20.1",
    "readline": "^1.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
